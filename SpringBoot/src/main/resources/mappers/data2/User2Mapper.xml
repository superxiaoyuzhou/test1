<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.piter.mapper.data2.User2Mapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.piter.entity.data2.User2">
        <result column="id" jdbcType="INTEGER" property="id" />
        <result column="name" property="name" />
        <result column="age" property="age" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        name, age
    </sql>
    <insert id="insertTest" parameterType="com.piter.entity.data2.User2">
    insert into user2 ( name, age)
    values (
    #{name},
    #{age}
    )
    </insert>

    <select id="findTest" resultMap="BaseResultMap"
            parameterType="java.lang.Integer">
        select id, name,age
        from user2
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
        </where>
    </select>
</mapper>
